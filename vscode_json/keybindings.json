// Place your key bindings in this file to override the defaults
[
  // vim-like navigation of codeActionMenu
  {
    "key": "k",
    "command": "selectPrevCodeAction",
    "when": "codeActionMenuVisible"
  },
  {
    "key": "j",
    "command": "selectNextCodeAction",
    "when": "codeActionMenuVisible"
  },
  {
    "key": "Enter",
    "command": "acceptSelectedCodeAction",
    "when": "codeActionMenuVisible"
  },
  // tmux-like terminal navigation
  {
    "key": "cmd+k c",
    "command": "workbench.action.terminal.new",
    "when": "terminalFocus"
  },
  // go to next terminal window
  {
    "key": "cmd+k `",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus"
  },
  // go to previous terminal window
  {
    "key": "cmd+k shift+`",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "terminalFocus"
  },
  // navigate split terminal left
  {
    "key": "cmd+k h",
    "command": "workbench.action.terminal.focusPreviousPane",
    "when": "terminalFocus"
  },
  // navigate split terminal right
  {
    "key": "cmd+k l",
    "command": "workbench.action.terminal.focusNextPane",
    "when": "terminalFocus"
  },
  // close terminal, focus editor
  {
    "key": "cmd+k tab",
    "command": "workbench.action.closePanel",
    "when": "terminalFocus"
  },
  // full-screen terminal from editor
  {
    "key": "cmd+k tab",
    "command": "workbench.action.toggleMaximizedPanel",
    "when": "!terminalFocus"
  },
  // Get out of sidebar when navigated to via vim-unimpaired
  {
    "key": "] v",
    "command": "workbench.action.navigateRight",
    "when": "sideBarFocus && !inputFocus && !inputBoxFocus"
  },
  // Get out of markdown preview when navigated to via vim-unimpaired
  {
    "key": "[ b",
    "command": "workbench.action.previousEditorInGroup",
    "when": "actionWebViewPanelId == markdown.preview"
  },
  {
    "key": "] b",
    "command": "workbench.action.nextEditorInGroup",
    "when": "actionWebViewPanelId == markdown.preview"
  },
  {
    "key": "[ v",
    "command": "workbench.action.navigateLeft",
    "when": "actionWebViewPanelId == markdown.preview"
  },
  {
    "key": "] v",
    "command": "workbench.action.navigateRight",
    "when": "actionWebViewPanelId == markdown.preview"
  // attempt at allowing switch project in empty pane, but gets picked up even in command palette
